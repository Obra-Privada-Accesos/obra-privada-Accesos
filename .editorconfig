root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2

[*.dart]
indent_size = 2
# max_line_length puede ser usado por algunos editores; el formatter de Dart usa 80 por defecto
max_line_length = 80
